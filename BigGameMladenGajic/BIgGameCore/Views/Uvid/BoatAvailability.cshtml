
@using BIgGameCore.Models

@model BBA
<script src="https://kit.fontawesome.com/b93c51e9c9.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/css/BoatAvailabilityDetail.css" />
<script src="~/js/boatImage.js"></script>
<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">

                    <div class="preview-pic tab-content">
                        @if (Model.Boat.BoatImages != null && Model.Boat.BoatImages.Count > 0)
                        {
                            <div class="tab-pane active" id="dvPreview"><img src="~/images/boats/@Model.Boat.BoatImages[0].Image" /></div>
                        }
                    </div>
                    <ul class="preview-thumbnail nav nav-tabs">
                        @foreach (BoatImage image in Model.Boat.BoatImages)
                        {
                            <li><a onclick="changeImageUvid('@image.Image')"><img src="~/images/boats/@image.Image" /></a></li>

                        }
                    </ul>

                </div>
                <div class="details col-md-6">
                    <h3 class="product-title"><i class="text-muted">#@Model.Boat.BoatID </i> @Model.Boat.Name</h3>
                    <div class="rating">
                        <div class="stars">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                        </div>
                        <span class="review-no">41 reviews</span>
                    </div>
                    <p class="product-description"> @Model.Boat.Desctription </p>
                    <h4 class="price">Cena: <span>$ @Model.BoatAvailability.Price /h</span></h4>
                    <p class="vote"><strong>91%</strong> klijenata je uživalo na ovom brodu! <strong>(87 votes)</strong></p>
                    <p>Broj osoba: <span class="right-align-5vw"> @Model.Boat.PassangerCapacity <i class="bi bi-person-fill"></i></span></p>
                    <p>Dužina:<span class="right-align-5vw"> @Model.Boat.Length <b>ft</b></span></p>
                    <p>Rezervoar:<span class="right-align-5vw"> @Model.Boat.FuelCapacity l <i class="bi bi-droplet-fill"></i></span></p>
                    <p>Mesta za spavanje: <span class="right-align-5vw">@Model.Boat.SleepCapacity  <i class="bi  bi-moon"></i></span></p>

                    <p>
                        Izabrani datumi:<br />
                        Polazak: <strong> @ViewBag.StartDate.ToString("dd.MM.yyyy HH:mm")</strong> <br />
                        Povratak: <strong>@ViewBag.EndDate.ToString("dd.MM.yyyy HH:mm")</strong>

                        <a href="~/uvid/boat/@Model.Boat.BoatID">
                            <button class="like btn btn-default" type="button" style=" position: relative; top: -20px; left: 20px;"><span class="fa fa-pen" style=""> </span></button>
                        </a>
                        <br /> <br />
                        Ukupno sati : <strong>@ViewBag.TotalHours h</strong><br />
                        <br />
                        Ukupna cena : <strong>$ @ViewBag.TotalPrice </strong>

                    </p>
                    <div class="action">
                        <form action="~/Reservation">
                            <button class="add-to-cart btn btn-default" type="submit">Rezerviši</button>
                            <button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
