    </div>
    <div id="content" class="my-5">
        <div id="filterbar" class="collapse">
            <form action="~/Uvid/BoatsFilter" method="get" id="filterForm">
                <div class="box border-bottom">
                    <div class="box-label text-uppercase d-flex align-items-center">Broj osoba <button class="btn ml-auto" type="button" data-toggle="collapse" data-target="#price" aria-expanded="false" aria-controls="price"><span class="fas fa-plus"></span></button> </div>
                    <div class="" id="price">
                        <div class="middle">
                            <input id="ex6" type="range" min="1" max="50" step="1" value="1" name="passangersCapacity" />
                            <span>Broj osoba: <strong id="ex6txt">3</strong></span>

                        </div>
                    </div>
                </div>

                <div class="box border-bottom">
                    <div class="box-label text-uppercase d-flex align-items-center">Dodatni uslovi <button class="btn ml-auto" type="button" data-toggle="collapse" data-target="#inner-box" aria-expanded="false" aria-controls="inner-box" id="out" onclick="outerFilter()"> <span class="fas fa-plus"></span> </button> </div>
                    <div id="inner-box" class="collapse mt-2 mr-1">
                        <div class="my-1"> <label class="tick">Spavanje <input type="checkbox"> <span class="check"></span> </label> </div>
                        <div class="my-1"> <label class="tick">Kuhinja <input type="checkbox"> <span class="check"></span> </label> </div>
                        <div class="my-1"> <label class="tick">WC <input type="checkbox"> <span class="check"></span> </label> </div>
                        <div class="my-1"> <label class="tick">Kupatilo <input type="checkbox"> <span class="check"></span> </label> </div>
                        <div class="my-1"> <label class="tick">Natkrivena paluba <input type="checkbox"> <span class="check"></span> </label> </div>

                    </div>
                </div>
                <div class="box border-bottom">
                    <div class="box-label text-uppercase d-flex align-items-center">Dodatna oprema <button class="btn ml-auto" type="button" data-toggle="collapse" data-target="#inner-box2" aria-expanded="false" aria-controls="inner-box2"><span class="fas fa-plus"></span></button> </div>
                    <div id="inner-box2" class=" mt-2 mr-1 collapse">
                        <div class="my-1"> <label class="tick">Držači za štapove <input type="checkbox" checked="checked"> <span class="check"></span> </label> </div>
                        <div class="my-1"> <label class="tick">Ležaljke <input type="checkbox"> <span class="check"></span> </label> </div>
                        <div class="my-1"> <label class="tick">Osnovna oprema za pecanje<input type="checkbox" checked> <span class="check"></span> </label> </div>
                        <div class="my-1"> <label class="tick">Prsluci za spasavanje <input type="checkbox"> <span class="check"></span> </label> </div>
                        <div class="my-1"> <label class="tick">Volan<input type="checkbox"> <span class="check"></span> </label> </div>
                    </div>
                </div>
                <div class="box">
                    <div class="box-label text-uppercase d-flex align-items-center">dužina <button class="btn ml-auto" type="button" data-toggle="collapse" data-target="#lenght" aria-expanded="false" aria-controls="size"><span class="fas fa-plus"></span></button> </div>
                    <div id="lenght" class="">
                        
                            <input id="rangeLengtn" type="range" min="10" max="30" step="1" value="10"  name="lenght" />
                            <span>Minimalna dužina broda : <strong id="rangeLengtnTXT">13</strong> ft</span>
                    </div>
                </div>

                <div class="box border-bottom">
                    <div class="box-label text-uppercase d-flex align-items-center">godina proizvodnje broda <button class="btn ml-auto" type="button" data-toggle="collapse" data-target="#year" aria-expanded="false" aria-controls="year"><span class="fas fa-plus"></span></button> </div>
                    <div class="" id="year">
                        <div class="middle">
                            <input type="text" class="form-control" name="year" id="datepicker" placeholder="2000"/>

                        </div>
                    </div>
                </div>
                <div class="filterButtons">
                    <button class="btn btn-primary" type="submit">Primeni filtere</button>
                    
                    </form>
                    <form action="~/uvid/boats" id="form2">
                        <button class="btn btn-warning" type="submit" >Restartuj</button>
                    </form>
                </div>
        </div>
        <div id="products">
            <div class="filters-info">
                @if(ViewBag.filters != null){
                foreach(KeyValuePair<string, string> filter in @ViewBag.filters){
                    <span class="filter-added">@filter.Key : <strong>@filter.Value</strong></span>
                }
                }
            </div>
            <div class="row mx-0 gallery-display">
                @if(Model.Count > 0 ){
                @foreach (Boat boat in Model)
                {
    <div class="col-lg-4 col-md-6">
        <a href="~/Uvid/Boat/@boat.BoatID">
            <div class="card d-flex flex-column align-items-center">
                <div class="product-name">@boat.Name</div>
                @if( boat.BoatImages.Count > 0)
                {
                    <div class="card-img"> <img src="~/images/boats/@boat.BoatImages[0].Image" alt=""> </div>
                }
                <div class="card-body pt-5">
                    <div class="text-muted  d-flex justify-content-start align-items-center">broj osoba: </div><div class="d-flex justify-content-end align-items-center">@boat.PassangerCapacity <i class="bi bi-person-fill"></i></div>
                    <div class="text-muted  d-flex justify-content-start align-items-center">dužina: </div><div class="font-weight-bold d-flex justify-content-end align-items-center">@boat.Length ft</div>
                    <div class="text-muted  d-flex justify-content-start align-items-center">prosečna cena: </div>
                    <div class="d-flex align-items-center price justify-content-end">
                        <button class="btn-success my-2" style="border-radius:10px">$35 /h </button>

                    </div>
                </div>
            </div>
        </a>
    </div>}
                }else {
                   <h1> Trenutno nema brodova koji odgovaraju kriterijumima!</h1>
                }
            </div>
        </div>
    </div>
</div>


 <!--YEAR Picker-->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.2.0/css/datepicker.min.css" rel="stylesheet">
 <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.2.0/js/bootstrap-datepicker.min.js"></script>
<script>
$(document).ready(function(){
  $("#datepicker").datepicker({
     format: "yyyy",
     viewMode: "years", 
     minViewMode: "years",
     autoclose:true
  });   
})


</script>