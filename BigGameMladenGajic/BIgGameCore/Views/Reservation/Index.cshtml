
<h1>Potvrda rezervacije!</h1>
<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="upper p-4">
                    <div class="d-flex justify-content-between">
                        <div class="amount">
                            <small>Klijent:</small>
                            <span class="text-primary font-weight-bold">@ViewBag.currentUser.FirstAndLastName()</span>
                            <br />
                            <small>ID:</small><span class="text-primary font-weight-bold">#@ViewBag.currentUser.UserID</span>
                        </div>
                        <div class="d-flex flex-row align-items-center">
                            <div class="add">
                                <span class="font-weight-bold "> @ViewBag.bba.Boat.Name</span>
                                #@ViewBag.bba.Boat.BoatID
                                <span class="font-weight-bold d-block">@ViewBag.bba.BoatAvailability.Location</span>
                                <small>@ViewBag.bba.Boat.PassangerCapacity osoba, @ViewBag.bba.Boat.Length ft'</small>
                                <small>Thursday,September 24th</small>
                            </div> 
                            @if (ViewBag.bba.Boat.BoatImages != null && ViewBag.bba.Boat.BoatImages.Count > 0)
                            {
                            <img src="~/images/boats/@ViewBag.bba.Boat.BoatImages[0].Image" width="100" class="rounded-circle">
                            }
                        </div>
                    </div>
                    <hr>
                    <div class="delivery">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center"> <i class="fa fa-check-circle-o"></i> <span class="ml-2">Pocetak plovidbe: </span> </div> <span class="font-weight-bold">@ViewBag.startDate.ToString("dd.MM.yyyy hh:mm")</span>
                        </div>
                    </div>
                    <div class="transaction mt-2">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center"> <i class="fa fa-check-circle-o"></i> <span class="ml-2">Kraj plovidbe: </span> </div> <span class="font-weight-bold">@ViewBag.endDate.ToString("dd.MM.yyyy hh:mm")</span>
                        </div>
                    </div>
                    <hr>
                    <div class="transaction mt-2">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center"> <i class="fa fa-check-circle-o"></i> <span class="ml-2">Cena po satu: </span> </div> <span class="font-weight-bold">@ViewBag.bba.BoatAvailability.Price $/h</span>
                        </div>
                    </div>
                    <div class="transaction mt-2">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center"> <i class="fa fa-check-circle-o"></i> <span class="ml-2">Ukupno sati: </span> </div> <span class="font-weight-bold">@ViewBag.totalHours h</span>
                        </div>
                    </div>
                    <div class="transaction mt-2">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center"> <i class="fa fa-check-circle-o"></i> <span class="ml-2">PDV:  </span> </div> <span class="font-weight-bold">0.8% - $15,00</span>
                        </div>
                    </div>
                </div>
                <div class="lower bg-primary p-4 py-5 text-white d-flex justify-content-between align-items-center">
                    <div class="d-flex flex-column"> <span>Ukupna cena</span> <small>Cena moze da varira u zavisnosti od dogovora sa vlasnikom.</small> </div>
                    <h2 id="totalPrice">$@ViewBag.totalPrice</h2>
                </div>
                <div class="lower bg-primary p-4 py-5 ">
                    <a href="~/Reservation/Reserve">
                        <button class="btn-success btn-reserve">Rezerviši</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>