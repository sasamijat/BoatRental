<link rel="stylesheet" href="~/css/login.css" />
<div class="container login">
    <form action="~/Reservation/Login" method="post">

        <h1>Morate biti ulogovani da bi izvršili registraciju!</h1>
        <h2>@ViewBag.SuccessRegistrationMessage</h2>
        <table>
            <tr>
                <td style="text-align: right;">
                    UserID( ili e-mail):
                </td>
                <td>
                    <input type="text" name="username" />
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">
                    Password:
                </td>
                <td>
                    <input type="password" name="password" />
                </td>
            </tr>
            <tr>
                <td></td>
                <td> <button type="submit" class="btn-dark" style="width:100%;">Log in</button></td>
            </tr>
        </table>
        @ViewBag.LoginMessage

        Nemate profil? <a href="~/Reservation/Registration">Registrujte se da bi nastavili rezervaciju.</a>

    </form>

</div>