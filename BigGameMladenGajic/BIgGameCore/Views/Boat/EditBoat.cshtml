@using BigGame.Models

@model Boat

<script src="https://kit.fontawesome.com/b93c51e9c9.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/css/boat.css" />
<link rel="stylesheet" href="~/css/newBoat.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<script src="~/js/boatImage.js"></script>
<script src="~/js/newBoat.js"></script>
<script src="~/js/editBoat.js"></script>

<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">
                    <h3>Slike broda:</h3>

                    <input type="file" id="slika" onchange="getBase64()" style="display:none" accept="image/*" />
                    <div id="dvPreview" class="preview-pic tab-content display-flex-ceneter">
                        @if (Model.BoatImages.Count > 0)
                        {
                            <img src="~/images/boats/@Model.BoatImages[0].Image" />
                        }
                        else
                        {
                            <div class="tab-pane active" id="pic-1"><i class="bi bi-images" style="font-size:12em" onclick="openFileDialog()"></i></div>
                        }
                    </div>
                    <ul class="preview-thumbnail nav nav-tabs" >
                        @foreach (BoatImage image in Model.BoatImages)
                        {

                            <li id="@image.Image"><a onclick="changeExistingImage('@image.Image')"><img src="~/images/boats/@image.Image" /></a><i class="bi bi-x-circle-fill delete-image"  onclick="imageForRemove('@image.Image')"></i></li>
                        }
                    </ul>

                    <ul class="preview-thumbnail nav nav-tabs" id="thumb_images">
                      
                    </ul>
                    <i class="bi bi-plus" onclick="openFileDialog()">Dodaj novu sliku</i>
                </div>
                <form class=" grid-3-7" method="post" id="addNewBoatForm">
                    
                    <h3 class="product-title"><i class="text-muted">Naziv: </i></h3> <input type="text" name="Name" id="Name" value="@Model.Name"/>
                    <p class="product-description"><i class="text-muted">Proizvodjač: </i> </p><input type="text" name="Make" id="Make" value="@Model.Make"/>
                    <p class="product-description"><i class="text-muted">Model: </i> </p><input type="text" name="Model" id="Model" value="@Model.Model"/>
                    <p class="product-description"><i class="text-muted">Godina proizvodnje: </i> </p> <input type="number" min="1950" max="2022" value="@Model.Year" name="Year" id="Year" />
                    <p class="product-description"><i class="text-muted">Dužina (ft): </i> </p><input type="number" min="0"  name="Length" id="Length" value="@Model.Length"/>
                    <p class="product-description"><i class="text-muted">Kapacitet osoba: </i> </p> <input type="number" min="1" value="@Model.PassangerCapacity" name="PassangerCapacity" id="PassangerCapacity" />
                    <p class="product-description"><i class="text-muted">Kapacitet rezervoara (l) : </i> </p><input type="number" min="5" value="@Model.FuelCapacity" name="FuelCapacity" id="FuelCapacity" />
                    <p class="product-description"><i class="text-muted">Broj kreveta: </i> </p><input type="number" min="0" value="@Model.BedCount" name="BedCount" id="BedCount" />
                    <p class="product-description"><i class="text-muted">Opis: </i></p> <textarea type="text" cols="20" rows="8" name="Desctription" id="Desctription" >@Model.Desctription</textarea>
                    <button type="button" class="btn-addNew" onclick="editBoat()">Sacuvaj izmenjene podatke</button>

                </form>
            </div>
        </div>
    </div>
</div>
<script>
    var boatForEdit = @Model.BoatID;
</script>