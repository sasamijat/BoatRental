
<script src="https://kit.fontawesome.com/b93c51e9c9.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/css/boat.css" />
<link rel="stylesheet" href="~/css/newBoat.css"/>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<script src="~/js/boatImage.js"></script>
<script src="~/js/newBoat.js"></script>

<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">
                    <h3>Dodaj novi brod:</h3>

                    <input type="file" id="slika" onchange="getBase64()" style="display:none" accept="image/*" />
                    <div id="dvPreview" class="preview-pic tab-content display-flex-ceneter">

                        <div class="tab-pane active" id="pic-1"><i class="bi bi-images" style="font-size:12em" onclick="openFileDialog()"></i></div>
                        
                    </div>
                    <ul class="preview-thumbnail nav nav-tabs" id="thumb_images">
                        
                    </ul>

                    <i class="bi bi-plus" onclick="openFileDialog()">Dodaj novu sliku</i>
                </div>
                <form  class=" grid-3-7" method="post" id="addNewBoatForm" >
                        <h3 class="product-title"><i class="text-muted">Naziv: </i></h3> <input type="text" name="Name" id="Name" />
                        <p class="product-description"><i class="text-muted">Proizvodjač: </i> </p><input type="text" name="Make" id="Make"/>
                        <p class="product-description"><i class="text-muted">Model: </i> </p><input type="text" name="Model" id="Model"/>
                        <p class="product-description"><i class="text-muted">Godina proizvodnje: </i> </p> <input type="number" min="1950" max="2022" value="2010" name="Year" id="Year"/>
                        <p class="product-description"><i class="text-muted">Dužina (ft): </i> </p><input type="number" min="0" value="0" name="Length" id="Length"/>
                        <p class="product-description"><i class="text-muted">Kapacitet osoba: </i> </p> <input type="number" min="1" value="2" name="PassangerCapacity"  id="PassangerCapacity"/>
                        <p class="product-description"><i class="text-muted">Kapacitet rezervoara (l) : </i> </p><input type="number" min="5" value="5" name="FuelCapacity" id="FuelCapacity"/>
                        <p class="product-description"><i class="text-muted">Broj kreveta: </i> </p><input type="number" min="0" value="0" name="BedCount" id="BedCount" />
                        <p class="product-description"><i class="text-muted">Opis: </i></p> <textarea type="text" cols="20" rows="8" name="Desctription" id="Desctription"></textarea>
                        <button type="button" class="btn-addNew" onclick="addNewBoat()">Dodaj novi brod</button>

                </form>
            </div>
        </div>
    </div>
</div>
