@model HotelWorkOrderManagement.DTO.User.DataIn.UserDataIn;
@{
    bool hasProfileImage = Model.ProfilePicture == null;
}
<div class="container">
    <div class="container p-5" hidden="@hasProfileImage">
           <div class="row">
        <div class='col-md-6'>
             <img src="~/images/@Model.ProfilePicture"   
              class="rounded-circle mx-auto d-block"   
              height="250" width="220"   
              asp-append-version="true" />        
        </div>
    </div>
    <br/>
    </div>
    </br>
    <div class="row">
        <div class='col-6'>
            <h2>First Name:</h2>
        </div>
        <div class='col-6'>
            <h2>@Model.Name</h2>
        </div>
    </div>
    </br>
    <div class="row">
        <div class='col-6'>
            <h2>Last Name:</h2>
        </div>
        <div class='col-6'>
            <h2>@Model.LastName</h2>
        </div>
    </div>
    </br>
    <div class="row">
        <div class='col-6'>
            <h2>Username:</h2>
        </div>
        <div class='col-6'>
            <h2>@Model.UserName</h2>
        </div>
    </div>
    </br>
    <div class="row">
        <div class='col-6'>
            <h2>Password:</h2>
        </div>
        <div class='col-6'>
            <h2>@Model.Password</h2>
        </div>
    </div>
    <br/>
    <hr/>
    <div class="row">
        <form asp-controller="Home" asp-action="Logout" method="post">
            <button class="btn-primary btn-primary btn-lg">Logout</button>
        </form>
    </div>
    
</div>