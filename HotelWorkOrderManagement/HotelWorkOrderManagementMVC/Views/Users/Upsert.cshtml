@model HotelWorkOrderManagement.DTO.User.DataIn.UserDataIn;

<div class="border-bottom container" style="padding:30px;">
    <form enctype="multipart/form-data" method="post" id="myform">
        <label hidden id="Id">@Model.Id</label>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control"/>
                <span id="NameValidation" class="text-danger"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="LastName"></label>
            </div>
            <div class="col-6">
                <input asp-for="LastName" class="form-control"/>
                <span id="LastNameValidation" class="text-danger"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Password"></label>
            </div>
            <div class="col-6">
                <input name="Password" id="Password" type="password" for="Password" class="form-control"/>
                <span id="PasswordValidation" class="text-danger"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-6">
                <input asp-for="UserName" class="form-control"/>
                <span id="UserNameValidation" class="text-danger"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Role"></label>
            </div>
            <div class="col-6">
                <select asp-for="Role" class="form-select" >
                    @{
                        if (Model.Id == null)
                        {
                            <option selected="selected" disabled="disabled">Choose the role:</option>
                        }
                        string[] Roles = new string[]{"Maintainer","Housekeeper","Admin" };
                        foreach(string role in Roles)
                        {
                            bool s = Model.Role == role;
                            <option selected="@s" value="@role">@role</option>
                        }
                    }
                </select>
                <span id="RoleValidation" class="text-danger"/>
            </div>
        </div>
        <div class="form-group row">
           <div class="custom-file">  
               <label class="custom-file-label" for="customFile">Choose file</label>  
              <input asp-for="ProfileImage" id="ProfileImage" class="custom-file-input" accept="image/png, image/jpeg"/>  
            </div>  
        </div>
         <div class="form-group row">
            <div class="col-3 offset-3 pt-1">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Id != null ? "Update" : "Create")
                </button>
            </div>
            <div class="col-3 pt-1">
                <a asp-controller="Home" asp-action="Index" class="btn btn-success form-control">Back to HomePage</a>
            </div>
        </div>
        </form>


</div>

@section Scripts{ 
<script src="~/js/User/Upsert.js"></script>
}
