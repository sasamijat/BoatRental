@if (!string.IsNullOrEmpty(Convert.ToString(Session["Username"])))
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()


    <a href="#">@Session["FirstName"] @Session["LastName"]</a>
    <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>

    }
}


else
{
<span style="color:white; font-size:160%; font-family:'Brush Script MT',cursive; top:46%; position:absolute;">
    @Html.ActionLink("Prijava", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
</span>

}





