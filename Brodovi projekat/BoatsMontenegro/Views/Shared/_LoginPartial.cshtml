@if (!string.IsNullOrEmpty(Convert.ToString(Session["Username"])))
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()


    <a href="#" style="position: absolute; top: 100%; right:10%; font-family: 'Open Sans', sans-serif; font-size: 140%; color:white">@Session["FirstName"] @Session["LastName"]</a> <br /> <br />
    <a href="javascript:document.getElementById('logoutForm').submit()" style="position: absolute; top: 10%; right: 15%; font-family:'Libre Baskerville', serif;color:white; font-size: 140%">Odjava</a>

    }
}


else
{
<span style="position: absolute; top: 10%; right: 10%; font-family: 'Open Sans', sans-serif; font-size: 140%">
    @Html.ActionLink("Prijava", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
</span>

}





