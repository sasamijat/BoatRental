@model BoatsMontenegro.Models.Boat

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="position: absolute; top: 165%; left: 50%; font-family: Arial, Helvetica, sans-serif;" class="nekaklasa1" id="createBoatScroll">
    <div class="login-box">
        @using (Html.BeginForm("Create", "Boat", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h2>Unesite podatke o brodu:</h2>
            <form>
                <div class="user-box">
                    <input type="text" name="Name" required="">
                    <label>Ime</label>
                </div>
                <div class="user-box">
                    <input type="text" name="Category" required="">
                    <label>Kategorija</label>
                </div>
                <div class="user-box">
                    <input type="number" name="Capacity" required="">
                    <label>Kapacitet</label>
                </div>
                <div class="user-box">
                    <input type="text" name="Price" required="">
                    <label>Cijena</label>
                </div>
                <div class="user-box">
                    <input type="text" name="Size" required="">
                    <label>Velicina</label>
                </div>
                <div class="user-box">
                    <input type="text" name="Engine" required="">
                    <label>Motor</label>
                </div>
                <div class="user-box">
                    <input type="text" name="FuelConsumption" required="">
                    <label>Potrosnja goriva</label>
                </div>

                <a onclick="this.closest('form').submit();return false;">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    Objavi
                </a>

            </form>
        }
    </div>
</div>

<script type="text/javascript">
    jQuery("html").animate({
        scrollTop: jQuery("#createBoatScroll").offset().top - 100
    });
</script>


