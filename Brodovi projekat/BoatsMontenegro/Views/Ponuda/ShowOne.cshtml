@model IEnumerable<BoatsMontenegro.Models.Boat>

@{
    ViewBag.Title = "ShowOne";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{
    <div class="container-fluid d-flex justify-content-center" style="width: 70%; font-family: Arial, Helvetica, sans-serif; margin-left:25%;" id="showOneId">
        <div class="row mt-5" style="width:70%;" id="showOneId">
            <div class="col-sm-11" >
                <div class="card" style="width:70%;" id="showOneId">
                    <img src="https://static-s.aa-cdn.net/img/ios/1349495816/26ec3b631f7d13ca183aa420ae8495f7?v=1" class="card-img-top" width="100%">
                    <div class="card-body pt-0 px-0">
                        <br />
                        <div class="d-flex flex-row justify-content-between mb-0 px-3">
                            <h6 class="text-muted">Ime</h6>
                            <h6>@Html.DisplayFor(modelItem => item.Name)</h6>
                        </div>
                        <hr class="mt-2 mx-3">
                        <div class="d-flex flex-row justify-content-between px-3 pb-4">
                            <div class="d-flex flex-column"><h6 class="text-muted">Cijena</h6></div>
                            <div class="d-flex flex-column"><h5 class="mb-0">@Html.DisplayFor(modelItem => item.Price)</h5></div>
                        </div>
                        <div class="d-flex flex-row justify-content-between px-3 pb-4">
                            <div class="d-flex flex-column"><h6 class="text-muted">Kategorija</h6></div>
                            <div class="d-flex flex-column"><h5 class="mb-0">@Html.DisplayFor(modelItem => item.Category)</h5></div>
                        </div>
                        <div class="d-flex flex-row justify-content-between px-3 pb-4">
                            <div class="d-flex flex-column"><h6 class="text-muted">Kategorija</h6></div>
                            <div class="d-flex flex-column"><h5 class="mb-0">@Html.DisplayFor(modelItem => item.Size)</h5></div>
                        </div>
                        <div class="d-flex flex-row justify-content-between px-3 pb-4">
                            <div class="d-flex flex-column"><h6 class="text-muted">Kapacitet</h6></div>
                            <div class="d-flex flex-column"><h5 class="mb-0">@Html.DisplayFor(modelItem => item.Capacity) osoba</h5></div>
                        </div>                      
                        <div class="d-flex flex-row justify-content-between p-3 mid">
                            <div class="d-flex flex-column">
                                <h5 class="text-muted mb-1">Motor</h5>
                                <div class="d-flex flex-row">
                                    <img src="https://imgur.com/iPtsG7I.png" width="35px" height="25px"><div class="d-flex flex-column ml-1">
                                        <h6 class="ghj">@Html.DisplayFor(modelItem => item.Engine)</h6>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex flex-column">
                                <h5 class="text-muted mb-2">Potrosnja goriva</h5>
                                <div class="d-flex flex-row">
                                    <img src="~/ImagesFolder/gas-pump.png"><h6 class="ml-1">@Html.DisplayFor(modelItem => item.FuelConsumption)</h6>
                                </div>
                            </div>
                        </div> <br />

                        <a href="/Reservation/ScheduledAppointment?idboat=@item.BoatID">
                            <iput type="button" class="btn btn-danger btn-block" style="color:white; font-size:130%;">Zauzeti termini</iput>
                        </a><br />
                        
                        <a href="/Reservation/Create">
                            <iput type="button" class="btn btn-danger btn-block" style="color:white; font-size:130%;">Rezervisi brod</iput>
                        </a>
              
                     </div>
                </div>
            </div>
        </div>
    </div>
}